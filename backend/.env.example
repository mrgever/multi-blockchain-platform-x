# Database
DATABASE_URL="postgresql://user:password@localhost:5432/multi_blockchain_platform"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET="your-super-secret-jwt-key"
JWT_EXPIRES_IN="15m"
REFRESH_TOKEN_EXPIRES_IN="7d"

# Server
PORT=3001
NODE_ENV=development

# Blockchain RPC URLs (optional - will use defaults if not provided)
TON_RPC_URL=""
ETHEREUM_RPC_URL=""
BITCOIN_RPC_URL=""
DOGECOIN_RPC_URL=""

# API Keys for external services
COINGECKO_API_KEY=""
ETHERSCAN_API_KEY=""

# Encryption
ENCRYPTION_KEY="your-32-character-encryption-key"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN="http://localhost:3000"

# Logging
LOG_LEVEL="info"