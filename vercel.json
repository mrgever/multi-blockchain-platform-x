{
  "version": 2,
  "name": "nexus-multi-blockchain-platform",
  "description": "Professional multi-blockchain platform with NUSD swaps, wallet generation, and admin panel",
  "builds": [
    {
      "src": "backend/src/index.ts",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb",
        "includeFiles": ["backend/prisma/**/*"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/src/index.ts",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization, X-Requested-With",
        "Cache-Control": "public, max-age=0"
      }
    },
    {
      "src": "/health",
      "dest": "/backend/src/index.ts"
    },
    {
      "src": "/admin",
      "dest": "/admin-panel.html"
    },
    {
      "src": "/wallet-center",
      "dest": "/wallet-center.html"
    },
    {
      "src": "/modern",
      "dest": "/modern-ui.html"
    },
    {
      "src": "/demo",
      "dest": "/quick-demo.html"
    },
    {
      "src": "/tech",
      "dest": "/tech-ui.html"
    },
    {
      "src": "/simple",
      "dest": "/self-contained-ui.html"
    },
    {
      "src": "/test-wallet",
      "dest": "/test-wallet-generation.html"
    },
    {
      "src": "/",
      "dest": "/coingecko-ui.html"
    },
    {
      "src": "/(.*\\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot))",
      "dest": "/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "PORT": "3001",
    "COINGECKO_API_KEY": "@coingecko_api_key",
    "COINMARKETCAP_API_KEY": "@coinmarketcap_api_key",
    "CRYPTOCOMPARE_API_KEY": "@cryptocompare_api_key",
    "DATABASE_URL": "@database_url",
    "REDIS_URL": "@redis_url",
    "USDT_ADDRESS": "TPw6NEgZRxEoX8s64zfCKfPjwRCHHPTjQN",
    "TON_ADDRESS": "UQA7SUW4pslVSudC0Cfi8NTQyZI1nHHi-frcp20EvQZSfn__",
    "CORS_ORIGIN": "https://nexus-multi-blockchain-platform.vercel.app"
  },
  "functions": {
    "backend/src/**/*.ts": {
      "maxDuration": 30,
      "memory": 512
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS, PATCH"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization, X-Requested-With, Accept, Origin"
        },
        {
          "key": "Access-Control-Max-Age",
          "value": "86400"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/index.html",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/coingecko-ui.html",
      "destination": "/",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/backend/src/index.ts"
    }
  ],
  "installCommand": "cd backend && npm install",
  "buildCommand": "cd backend && npm run build",
  "outputDirectory": "."
}